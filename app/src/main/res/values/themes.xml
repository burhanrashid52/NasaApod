<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ThemeOverlay.ImageTile" parent="Theme.NasaApod">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Image.Tile.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Image.Tile.Headline6</item>
    </style>

    <style name="TextAppearance.Image.Tile.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">8sp</item>
    </style>


    <style name="TextAppearance.Image.Tile.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ThemeOverlay.ImageDetails" parent="Theme.NasaApod">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ImageDetails.Tile.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ImageDetails.Tile.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ImageDetails.Tile.Headline6
        </item>
    </style>

    <style name="TextAppearance.ImageDetails.Tile.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextAppearance.ImageDetails.Tile.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.ImageDetails.Tile.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>